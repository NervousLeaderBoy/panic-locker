#include <iostream>
int main()
{
	setlocale(LC_ALL, "Russian");

	//Найти расстояние между двумя точками с заданными координатами
	double x1, x2, y1, y2, a, b, c;
	std::cout << "Введите координаты первой точки: ";
	std::cin >> x1 >> y1;
	std::cout << "Введите координаты второй точки: ";
	std::cin >> x2 >> y2;
	a = abs(x2 - x1);
	b = abs(y2 - y1);
	c = sqrt(pow(a, 2) + pow(b, 2));
	std::cout << "Расстояние между точками = " << c << '\n' << '\n'; //Дополнительный перенос строки для красоты в консоли


	//Найти длину отрезков и их сумму
	double AC, BC, sum;
	std::cout << "Введите точки A, B, C: ";
	std::cin >> a >> b >> c;
	AC = abs(a - c);
	BC = abs(b - c);
	sum = AC + BC;
	std::cout << "AC = " << AC << "\nBC = " << BC << "\nСумма длин отрезков = " << sum << '\n' << '\n';

	
	//Найти произведение длин отрезков АС И ВС, где С находится между А и В
	double pr;
	std::cout << "Введите точки A, B, C; С должна находиться между А и В: ";
	std::cin >> a >> b >> c;
	if (((c > b) && (c > a)) || ((c < b) && (c < a))) //Проверка, находится ли С между А и В, потому что это одно из условий задания
	{
		std::cout << "С должна находиться между А и В.\n";
	} else
	  {
		AC = abs(a - c);
		BC = abs(b - c);
		pr = AC * BC;
		std::cout << "Произведение длин АС и ВС = " << pr << '\n' << '\n';
	  }
	
	//Найти периметр и площадь прямоугольника
	double S, P;
	std::cout << "Введите координаты первой точки прямоугольника: ";
	std::cin >> x1 >> y1;
	std::cout << "Введите координаты второй точки прямоугольника: ";
	std::cin >> x2 >> y2;
	a = abs(x2 - x1);
	b = abs(y2 - y1);
	P = (a + b) * 2;
	S = a * b;
	std::cout << "Площадь прямоугольника = " << S << "\nПериметр прямоугольника = " << P << '\n' << '\n';

	//Найти периметр и площадь треугольника
	double x3, y3, P2;
	std::cout << "Введите координаты первой точки треугольника: ";
	std::cin >> x1 >> y1;
	std::cout << "Введите координаты второй точки треугольника: ";
	std::cin >> x2 >> y2;
	std::cout << "Введите координаты третьей точки треугольника: ";
	std::cin >> x3 >> y3;
	a = sqrt(pow((abs(x1 - x2)), 2) + pow((abs(y1 - y2)), 2));
	b = sqrt(pow((abs(x2 - x3)), 2) + pow((abs(y2 - y3)), 2));
	c = sqrt(pow((abs(x1 - x3)), 2) + pow((abs(y1 - y3)), 2));
	P = a + b + c;
	P2 = P / 2;
	S = sqrt(P2 * (P2 - a) * (P2 - b) * (P2 - c));
	std::cout << "Периметр треугольника = " << P << "\nПлощадь треугольника = " << S << '\n';

	return 0;
}
