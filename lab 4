#include <iostream>
int main()
{
	//Íàõîæäåíèå ïëîùàäè è ïåðèìåòðà ïðÿìîóãîëüíèêà
	float a, b, S, P;
	std::cout << "Enter sides of rectangle: ";
	std::cin >> a >> b;
	S = a * b;
	P = (a + b) * 2;
	std::cout << "S = " << S << '\n';
	std::cout << "P = " << P << '\n' << '\n'; //Âòîðîé ïåðåíîñ ñòðîêè ïðîñòî äëÿ êðàñîòû â êîíñîëè

	//Íàõîæäåíèå äëèíû îêðóæíîñòè
	float d, L;
	const float Pi = 3.14;
	std::cout << "Enter diameter of the circle: ";
	std::cin >> d;
	L = Pi * d;
	std::cout << "L = " << L << '\n' << '\n';

	//Íàõîæäåíèå ñðåäíåãî àðèôìåòè÷åñêîãî äâóõ ÷èñåë
	float average;
	std::cout << "Enter two numbers: ";
	std::cin >> a >> b;
	average = (a + b) / 2;
	std::cout << "Average = " << average << '\n' << '\n';

	//Íàõîæäåíèå ñóììû, ðàçíîñòè, ïðîèçâåäåíèÿ è ÷àñòíîãî êâàäðàòîâ äâóõ ÷èñåë
	double sum, dif, pr, quo;
	std::cout << "Enter two numbers: ";
	std::cin >> a >> b;
	sum = pow(a, 2) + pow(b, 2);
	dif = pow(a, 2) - pow(b, 2);
	pr = pow(a, 2) * pow(b, 2);
	quo = pow(a, 2) / pow(b, 2);
	std::cout << "Sum = " << sum << '\n' << "Difference = " << dif << '\n' << "Product = " << pr << '\n' << "Quotient = " << quo << '\n';
	
	//Íàõîæäåíèå ñóììû, ðàçíîñòè, ïðîèçâåäåíèÿ è ÷àñòíîãî ìîäóëåé äâóõ ÷èñåë
	std::cout << "Enter two numbers: ";
	std::cin >> a >> b;
	sum = abs(a) + abs(b);
	dif = abs(a) - abs(b);
	pr = abs(a) * abs(b);
	quo = abs(a) / abs(b);
	std::cout << "Sum = " << sum << '\n' << "Difference = " << dif << '\n' << "Product = " << pr << '\n' << "Quotient = " << quo << '\n';
	return 0;
}
