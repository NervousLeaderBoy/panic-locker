#include <iostream>
#include <math.h>

int main()
{
	setlocale(LC_ALL, "Russian");

	//Нахождение площади и периметра прямоугольника
	float a, b, S, P;
	std::cout << "Введите стороны прямоугольника: ";
	std::cin >> a >> b;
	S = a * b;
	P = (a + b) * 2;
	std::cout << "Площадь = " << S << '\n';
	std::cout << "Периметр = " << P << "\n \n"; //Второй перенос строки просто для красоты в консоли

	//Нахождение длины окружности
	const float Pi = 3.14;
	float d, L;
	std::cout << "Введите диаметр окружности: ";
	std::cin >> d;
	L = Pi * d;
	std::cout << "Длина окружности = " << L << '\n' << '\n';

	//Нахождение среднего арифметического двух чисел
	float average;
	std::cout << "Введите два числа: ";
	std::cin >> a >> b;
	average = (a + b) / 2;
	std::cout << "Среднее арифметическое = " << average << "\n \n";

	//Нахождение суммы, разности, произведения и частного квадратов двух чисел
	double sum, dif, pr, quo;
	std::cout << "Введите два ненулевых числа: ";
	std::cin >> a >> b;
	sum = pow(a, 2) + pow(b, 2);
	dif = pow(a, 2) - pow(b, 2);
	pr = pow(a, 2) * pow(b, 2);
	quo = pow(a, 2) / pow(b, 2);
	std::cout << "Сумма квадратов = " << sum << '\n' << "Разность квадратов = " << dif << '\n' << "Произведение квадратов = " << pr << '\n' << "Частное квадратов = " << quo << "\n \n";
	
	//Нахождение суммы, разности, произведения и частного модулей двух чисел
	std::cout << "Введите два ненулевых числа: ";
	std::cin >> a >> b;
	sum = abs(a) + abs(b);
	dif = abs(a) - abs(b);
	pr = abs(a) * abs(b);
	quo = abs(a) / abs(b);
	std::cout << "Сумма модулей = " << sum << '\n' << "Разность модулей = " << dif << '\n' << "Произведение модулей = " << pr << '\n' << "Частное модулей = " << quo << '\n';
	return 0;
}
