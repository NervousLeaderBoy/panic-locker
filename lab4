#include <stdio.h>
#include <math.h>
int main()
{
	//Найти периметр и площадь
	int a, b, S, P;
	scanf_s("%d %d", &a, &b);
	S = a * b;
	P = 2 * (a + b);
	printf("S = %d\nP = %d\n", S, P);

	//Найти длину окружности
	double d, L;
	scanf_s("%lf", &d);
	L = 3.14 * d;
	printf("L = %.2lf\n", L);

	//Найти среднее арифметическое
	double c;
	scanf_s("%d %d", &a, &b);
	c = ((double)a + (double)b) / 2;
	printf("c = %.1lf\n", c);

	//Найти сумму, разность, произведение и частное квадратов двух чисел
	double A, B, s, r, p, ch;
	scanf_s("%lf %lf", &A, &B);
	s = pow(A, 2) + pow(B, 2);
	r = pow(A, 2) - pow(B, 2);
	p = pow(A, 2) * pow(B, 2);
	ch = pow(A, 2) / pow(B, 2);
	printf("s = %.0lf\nr = %.0lf\np = %.0lf\nch = %.3lf\n", s, r, p, ch);

	//Найти сумму, разность, произведение и частное квадратов двух чисел
	int x, y, sum, ras, pr;
	double chas;
	scanf_s("%d %d", &x, &y);
	sum = abs(x) + abs(y);
	ras = abs(x) - abs(y);
	pr = abs(x) * abs(y);
	chas = (double)abs(x) / (double)abs(y);
	printf("s = %d\nr = %d\np = %d\nch = %.2lf\n", sum, ras, pr, chas);

	return 0;
}
