#include <iostream>
int main()

{
	//Найти количество полных байт занимаемых файлом
	setlocale(LC_ALL, "Russian");
	int bit, Kb;
	std::cout << "Введите вес файла в байтах: ";
	std::cin >> bit;
	Kb = bit / 1024; //деление в int => остаток отсечется
	std::cout << "Вес файла в полных килобайтах: " << Kb << std::endl << std::endl;
	
	//Найти количество отрезков B, размещенных на отрезке A
	int A, B, ch;
	std::cout << "Введите целые положительные числа А и В, где А должно быть больше В: ";
	std::cin >> A >> B;
	if (A < B or A < 0 or B < 0)
	{
		std::cout << "Введенные значения не удовлетворяют условиям." << std::endl << std::endl;
	}
	else
	{
		ch = A / B;
		std::cout << "Количество отрезков длины " << B << " помещающихся в отрезке длины " << A << " без наложений = " << ch << std::endl << std::endl;
	}

	// Найти длину незанятой части отрезка А
	std::cout << "Введите целые положительные числа А и В, где А должно быть больше В: ";
	std::cin >> A >> B;
	if (A < B or A < 0 or B < 0)
	{
		std::cout << "Введенные значения не удовлетворяют условиям." << std::endl << std::endl;
	}
	else
	{
		ch = A % B;
		std::cout << "При размещении отрезков длины " << B << " в отрезке длины " << A << " без наложений незанятая часть отрезка = " << ch << std::endl << std::endl;
	}

	//Поменять местами цифры в двузначном числе
	int AB, BA, a, b;
	std::cout << "Введите двузначное число: ";
	std::cin >> AB;
	if (AB < 10 or AB > 99)
	{
		std::cout << "Введенное число не удовлетворяет условию." << std::endl << std::endl;
	}
	else
	{
		a = AB / 10;
		b = AB % 10;
		BA = b * 10 + a;

		std::cout << "Число " << AB << " записанное наоборот = " << BA << std::endl << std::endl;
	}

	// Перестановка цифры в трехзначном числе с начала в конец
	int ABC, BCA, bc;
	std::cout << "Введите трехзначное число: ";
	std::cin >> ABC;
	if (ABC < 100 or ABC > 999)
	{
		std::cout << "Введенное число не удовлетворяет условию." << std::endl << std::endl;
	}
	else
	{
		a = ABC / 100;
		bc = ABC % 100;
		BCA = bc * 10 + a;

		std::cout << "Число " << ABC << " с выполненной перестановкой цифры = " << BCA << std::endl << std::endl;
	}

	return 0;
}
