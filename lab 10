#include <iostream>
int main()
{
	setlocale(LC_ALL, "Russian");

	int A, B;
	std::cout << "Введите два целых числа А и В: ";
	std::cin >> A >> B;
	if (A > 2 && B <= 3)
	{
		std::cout << " Высказывание 'Выражения A>2 и B<=3 справедливы' истинно." << std::endl << std::endl;
	}
	else
	{
		std::cout << " Высказывание 'Выражения A>2 и B<=3 справедливы' ложно." << std::endl << std::endl;
	}


	int C;
	std::cout << "Введите три целых числа А, В и С: ";
	std::cin >> A >> B >> C;
	if (A < B && B < C)
	{
		std::cout << " Высказывание 'Справедливо двойное неравенство A < B < C' истинно." << std::endl << std::endl;
	}
	else
	{
		std::cout << " Высказывание 'Справедливо двойное неравенство A < B < C' ложно." << std::endl << std::endl;
	}


	std::cout << "Введите целое положительное число: ";
	std::cin >> A;
	if ( (A%2 == 0) && (A > 9) && (A<100))
	{
		std::cout << " Высказывание 'Данное число является четным двузначным' истинно." << std::endl << std::endl;
	}
	else
	{
		std::cout << " Высказывание 'Данное число является четным двузначным' ложно." << std::endl << std::endl;
	}


	int abc;
	std::cout << "Введите трехзначное число: ";
	std::cin >> abc;

	if ((abc > 99) && (abc < 1000))
	{
		A = abc / 100;
		B = (abc - A*100) / 10;
		C = abc - A*100 - B*10;

		if (((A < B) && (B < C)) || ((A > B) && (B > C)))
		{
			std::cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' истинно." << std::endl << std::endl;

		}
		else
		{
			std::cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' ложно." << std::endl << std::endl;
		}

	}
	else
	{
		std::cout << "Число не является трехзначным." << std::endl << std::endl;
	}

	int abcd, D;
	std::cout << "Введите четырехзначное число: ";
	std::cin >> abcd;
	if ((abcd > 999) && (abcd < 10000))
	{
		A = abcd / 1000;
		B = (abcd - A * 1000) / 100;
		C = (abcd - A * 1000 - B * 100) / 10;
		D = (abcd - A * 1000 - B * 100 - C * 10);

		if ((A * 10 + B) == (D * 10 + C))
		{
			std::cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' истинно." << std::endl << std::endl;
		}
		else
		{
			std::cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' ложно." << std::endl << std::endl;
		}
	}
	else
	{
		std::cout << "Число не является четырезначным." << std::endl << std::endl;
	}

	std::cout << "Введите три целых числа: ";
	std::cin >> A >> B >> C;
	if (A > 0 && B > 0 && C > 0)
	{
		if (((pow(A, 2) + pow(B, 2)) == pow(C, 2)) || ((pow(B, 2) + pow(C, 2)) == pow(A, 2)) || ((pow(C, 2) + pow(A, 2)) == pow(B, 2)))
		{
			std::cout << "Высказывание 'Треугольник со сторонами " << A <<", " << B << ", " << C << " является прямоугольным' истинно." << std::endl << std::endl;
		}
		else
		{
			std::cout << "Высказывание 'Треугольник со сторонами " << A << ", " << B << ", " << C << " является прямоугольным' ложно." << std::endl << std::endl;
		}
	}

	std::cout << "Введите три целых числа: ";
	std::cin >> A >> B >> C;
	if (A > 0 && B > 0 && C > 0)
	{
		if ( ((A + B) > C) && ((A + C) > B) && ((C + B) > A) )
		{
			std::cout << "Существует треугольник со сторонами " << A << ", " << B << ", " << C << std::endl << std::endl;
		}
		else
		{
			std::cout << "Треугольника со сторонами " << A << ", " << B << ", " << C << " не существует. " << std::endl << std::endl;
		}
	}
	else
	{
		std::cout << "Не существует треугольников с отрицательными сторонами.";
	}

	return 0;
}
