#include <iostream>
int main()

{
	setlocale(LC_ALL, "Russian");
	float a, rad;
	const float pi = 3.14;
	std::cout << "Введите угол а в градусах: ";
	std::cin >> a;
	if (a < 0 or a > 360)
	{
		std::cout << "Некорректное значение угла: угол должен быть от 0 до 360 градусов." << std::endl << std::endl;
	}
	else
	{
		rad = a / 180 * pi;
		std::cout.precision(3);
		std::cout << "Значение угла а в радианах = " << rad << std::endl << std::endl;
	}

	std::cout << "Введите угол а в радианах: ";
	std::cin >> a;
	if (a < 0 or a > 2*pi)
	{
		std::cout << "Некорректное значение угла: угол должен быть от 0 до 2Pi радиан." << std::endl << std::endl;
	}
	else
	{
		rad = a * 180 / pi;
		std::cout.precision(3);
		std::cout << "Значение угла а в градусах = " << rad << std::endl << std::endl;
	}

	float x, A, y, st1, st2;
	std::cout << "Известно, что Х килограмм конфет стоит А рублей." << std::endl << "Введите значения Х и А: ";
	std::cin >> x >> A;
	std::cout << "Определить, сколько стоят 1 кг и Y кг этих конфет." << std::endl << "Введите значение Y: ";
	std::cin >> y;

	st1 = A / x;
	st2 = st1 * y;

	std::cout << "1 кг конфет стоит " << st1 << " рублей." << std::endl << y << " кг конфет стоит " << st2 << " рублей." << std::endl << std::endl;


	//Определить расстояние между автомобилями
	float V1, V2, S, S2, T;
	std::cout << "Задача: Скорость первого автомобиля V1 км/ч, второго — V2 км/ч, расстояние между ними S км. Определить расстояние между ними через T часов, если автомобили удаляются друг от друга. Введите значения V1, V2, S и T: ";
	std::cin >> V1 >> V2 >> S >> T;
	S2 = (V1 + V2) * T + S;
	std::cout << "Через время равное " << T << " часам расстояние между автомобилями будет " << S2 << " км." << std::endl << std::endl;


	// Решить линейное уравнение
	float B;
	std::cout << "Дано уравнение вида А*х + В = 0. Введите значения А и В (А не должно быть равно 0): ";
	std::cin >> A >> B;
	if (A == 0)
	{
		std::cout << "Некорректное значение А: А не должно быть равно 0." << std::endl << std::endl;
	}
	else
	{
		x =  -B / A;
		std::cout << " x = " << x << std::endl << std::endl;
	}


	//Решить систему линейных уравнений
	float A1, A2, B1, B2, C1, C2;
	std::cout << "Дана система линейных уравнений вида " << std::endl << "A1*x + B1*y = C1" << std::endl << "A2*x + B2*y = С2" << std::endl << "Введите коэффициенты (коэффициенты при переменных не должны быть равны 0):" << std::endl;

	std::cout << "A1: ";
	std::cin >> A1;
	std::cout << "B1: ";
	std::cin >> B1;
	std::cout << "C1: ";
	std::cin >> C1;
	std::cout << "A2: ";
	std::cin >> A2;
	std::cout << "B2: ";
	std::cin >> B2;
	std::cout << "C2: ";
	std::cin >> C2;

	if (A1 == 0 or A2 == 0 or B1 == 0 or B2 == 0)
	{
		std::cout << "Некорректные вводные данные: значения коэффициентов при переменных не должно быть равно 0.";
	}
	else
	{
		y = (A1 * C2 - A2 * C1) / (A1 * B2 - A2 * B1);
		x = (C1 - B1 * y) / A1;

		std::cout << "Решением системы уравнений является пара чисел " << x << " и " << y << std::endl;
	}

	return 0;
}
